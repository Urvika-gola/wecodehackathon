.index.vertical-center
  .container
    .row.text-center
      %h1 Tip the work/life balance in your favor
      %br
      %br
    .row
      .col-md-6.col-md-offset-3
        = form_tag("/home/preferences", method: "POST", class: "form form-horizontal") do
          .input-group
            = text_field_tag "search_term", nil, {class: "form-control input-md search", placeholder: "Job Search Term"}
            %span.input-group-btn
              %button.btn.btn-default{type: "submit", id: "action-button"} Go
